

@{
    var status = Context.Request.Query["status"].ToString().ToLower();

    var pending=""; 
    var approved = "";
    var checkedIn = "";
    var completed = "";
    var cancelled = "";

    switch(status)
    {
        case "pending":
            pending = "text-white bg-success";
            break;
        case "approved":
            approved = "text-white bg-success";
            break;
        case "checkedin":
            checkedIn = "text-white bg-success";
            break;
        case "completed":
            completed = "text-white bg-success";
            break;
        case "cancelled":
            cancelled = "text-white bg-success";
            break;
        default:
            break;
    }
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-route-status="@SD.StatusPending" asp-controller="Booking" asp-action="Index">
                    <li class="list-group-item @pending">
                        Pending
                    </li>
                </a>
                <a style="text-decoration:none;" asp-route-status="@SD.StatusApproved" asp-controller="Booking" asp-action="Index">
                <li class="list-group-item @approved">
                        Approved
                    </li>
                </a>
                <a style="text-decoration:none;" asp-route-status="@SD.StatusCheckedIn" asp-controller="Booking" asp-action="Index">
                <li class="list-group-item @checkedIn">
                        CheckedIn
                    </li>
                </a>
                <a style="text-decoration:none;" asp-route-status="@SD.StatusCompleted" asp-controller="Booking" asp-action="Index">
                <li class="list-group-item @completed">
                        Completed
                    </li>
                </a>
                <a style="text-decoration:none;" asp-route-status="@SD.StatusCancelled" asp-controller="Booking" asp-action="Index">
                <li class="list-group-item @cancelled">
                        Cancelled
                    </li>
                </a>
            </ul>
        </div>
        <table id="tblbookings" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Check In Date</th>
                    <th>Nights</th>
                    <th>TotalCost</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/booking.js"></script>
}
